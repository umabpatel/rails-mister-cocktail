<h2><%= @cocktail_id %></h2>
<div class="container">
  <%= simple_form_for [@cocktail, @dose] do |f|  %>
  <% if @dose.errors.any? %>
          <div id="error-explanation">
            <ul>
              <% @dose.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>


    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Add a dose", class: "btn btn-primary" %>
  <% end %>
</div>

